{
	"@type": "MessageCard",
	"@context": "https://schema.org/extensions",
	"correlationId": "{{reqid}}",
	"summary": "{{summary}}",
	"themeColor": "{{env.color}}",
	"sections": [
		{
			"activityTitle": "**{{actor.name}}** {{action.verb}} [{{action.target.name}}]({{action.target.url}})",
			{{#if comment}}
			"text": "> {{comment}}",
			{{/if}}
			{{#if updates}}
			"facts": [
				{{#each updates.details}}
				{{#equal this.type "update"}}
				{
					"name": "",
					"value": "* {{this.verb}} {{#if this.oldValue}}**{{this.oldValue}}** to {{/if}}**{{this.newValue}}**"
				},
        		{{/equal}}
				{{/each}}
			]
			{{/if}}
		}
	]
}