  "date": "{{timestamp.rfc3339}}",
  "event": {
    "kind": "{{kind}}",
    "action": "{{verbKind}}"
  },
  "tags": "{{tags}}",
  "target": {
    "name": "{{name}}",
    "key": "{{key}}",
    "link": "{{target._links.site.href}}"
  },
